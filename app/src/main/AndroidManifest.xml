<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ioanna.cognitiveapp" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".FourShapes"
            android:label="@string/title_activity_four_shapes"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Feedback"
            android:label="@string/title_activity_feedback"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SecondPhase"
            android:label="@string/title_activity_second_phase"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".HomePage"
            android:label="@string/title_activity_home_page"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".FetchAddressIntentService"
            android:exported="false" />

        <activity
            android:name=".PieChartActivity"
            android:label="@string/title_activity_pie_chart"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".PlotWithZoomActivity"
            android:label="@string/title_activity_plot_with_zoom" >
        </activity>
    </application>

</manifest>
